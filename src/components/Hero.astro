<section class="hero">
    <div class="hero-content">
        <h1 class="glitch" data-text="DESATA EL CÓDIGO">DESATA EL CÓDIGO</h1>
        <p class="subtitle">
            PORTAFOLIO DE PROGRAMADORES <span class="highlight"
                >CIBER-ORGANICOS</span
            >
        </p>
        <p class="description">
            Somos un escuadrón de élite en desarrollo web con más de 5 años de
            experiencia fusionando código robusto con diseño evolutivo.
            Transformamos ideas complejas en ecosistemas digitales vivos.
        </p>
        <div class="cta-group">
            <a href="#programmers" class="cta-button">EXPLORAR TALENTO</a>
            <button id="advisory-btn" class="cta-button secondary"
                >AGENDAR ASESORÍA</button
            >
        </div>
    </div>
    <div class="scanline"></div>
</section>

<script>
    const advisoryBtn = document.getElementById("advisory-btn");
    if (advisoryBtn) {
        advisoryBtn.addEventListener("click", () => {
            const userStr = localStorage.getItem("ciber_user");
            if (userStr) {
                // User is logged in, open modal
                if ((window as any).openAdvisoryModal) {
                    (window as any).openAdvisoryModal();
                }
            } else {
                // User not logged in, show Auth Modal
                if ((window as any).openAuthModal) {
                    (window as any).openAuthModal();
                }
            }
        });
    }
</script>

<style>
    .hero {
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
        background-image: url("/cyber_jungle_panther.png"); /* Will need to ensure this path is correct after generation */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

    .hero::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            to bottom,
            rgba(5, 10, 8, 0.4),
            var(--deep-jungle)
        );
        z-index: 1;
    }

    .hero-content {
        position: relative;
        z-index: 2;
        text-align: center;
        padding: 2rem;
    }

    h1 {
        font-size: 5rem;
        font-weight: 900;
        color: var(--text-main);
        letter-spacing: 5px;
        margin-bottom: 1rem;
        position: relative;
    }

    .subtitle {
        font-size: 1.5rem;
        color: var(--electric-blue);
        margin-bottom: 2.5rem;
        letter-spacing: 3px;
        font-family: var(--font-body);
    }

    .highlight {
        color: var(--neon-green);
        font-weight: bold;
    }

    .cta-button {
        display: inline-block;
        padding: 1rem 3rem;
        background: transparent;
        border: 2px solid var(--neon-green);
        color: var(--neon-green);
        font-family: var(--font-heading);
        font-size: 1.2rem;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 2px;
        position: relative;
        overflow: hidden;
        z-index: 1;
        transition: color 0.3s;
    }

    .cta-button::before {
        content: "";
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: var(--neon-green);
        z-index: -1;
        transition: left 0.3s ease-in-out;
    }

    .cta-button:hover {
        color: var(--deep-jungle);
        box-shadow: 0 0 20px var(--neon-green);
    }

    .cta-button:hover::before {
        left: 0;
    }

    .cta-group {
        display: flex;
        gap: 1.5rem;
        justify-content: center;
        margin-bottom: 2rem;
        flex-wrap: wrap;
    }

    .cta-button.secondary {
        border-color: var(--cyber-purple);
        color: var(--cyber-purple);
    }

    .cta-button.secondary::before {
        background: var(--cyber-purple);
    }

    .cta-button.secondary:hover {
        box-shadow: 0 0 20px var(--cyber-purple);
    }

    /* Glitch Effect */
    .glitch {
        position: relative;
    }

    .glitch::before,
    .glitch::after {
        content: attr(data-text);
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    .glitch::before {
        left: 2px;
        text-shadow: -1px 0 #ff00c1;
        clip: rect(44px, 450px, 56px, 0);
        animation: glitch-anim 5s infinite linear alternate-reverse;
    }

    .glitch::after {
        left: -2px;
        text-shadow: -1px 0 #00fff9;
        clip: rect(44px, 450px, 56px, 0);
        animation: glitch-anim2 5s infinite linear alternate-reverse;
    }

    @keyframes glitch-anim {
        0% {
            clip: rect(14px, 9999px, 89px, 0);
        }
        20% {
            clip: rect(66px, 9999px, 6px, 0);
        }
        40% {
            clip: rect(67px, 9999px, 25px, 0);
        }
        60% {
            clip: rect(2px, 9999px, 45px, 0);
        }
        80% {
            clip: rect(51px, 9999px, 39px, 0);
        }
        100% {
            clip: rect(32px, 9999px, 56px, 0);
        }
    }

    @keyframes glitch-anim2 {
        0% {
            clip: rect(26px, 9999px, 20px, 0);
        }
        20% {
            clip: rect(2px, 9999px, 45px, 0);
        }
        40% {
            clip: rect(48px, 9999px, 98px, 0);
        }
        60% {
            clip: rect(32px, 9999px, 12px, 0);
        }
        80% {
            clip: rect(3px, 9999px, 95px, 0);
        }
        100% {
            clip: rect(10px, 9999px, 83px, 0);
        }
    }

    .scanline {
        width: 100%;
        height: 100px;
        z-index: 10;
        background: linear-gradient(
            0deg,
            rgba(0, 0, 0, 0) 0%,
            rgba(57, 255, 20, 0.1) 50%,
            rgba(0, 0, 0, 0) 100%
        );
        opacity: 0.1;
        position: absolute;
        bottom: 100%;
        animation: scanline 10s linear infinite;
        pointer-events: none;
    }

    @keyframes scanline {
        0% {
            bottom: 100%;
        }
        80% {
            bottom: 100%;
        }
        100% {
            bottom: -100px;
        }
    }

    @media (max-width: 768px) {
        h1 {
            font-size: 3rem;
        }
        .subtitle {
            font-size: 1rem;
        }

        .description {
            font-size: 0.9rem;
            padding: 0 1rem;
        }
    }

    .description {
        max-width: 700px;
        margin: 0 auto 2.5rem;
        color: var(--text-dim);
        font-size: 1.1rem;
        line-height: 1.8;
    }
</style>
