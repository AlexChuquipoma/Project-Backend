---
// Client-side fetching only
---

<section id="programmers" class="programmers-section section-padding">
    <div class="container">
        <h2 class="section-title">
            NUESTROS <span class="neon-text-purple">OPERADORES</span>
        </h2>
        <p class="section-description">
            Cada miembro de nuestro colectivo ha sido forjado en el fuego de
            proyectos de alto impacto. Arquitectos de software, visionarios del
            frontend y estrategas de datos unidos por un propósito: la
            excelencia técnica.
        </p>

        <!-- Container for dynamic content -->
        <div id="programmers-grid" class="grid">
            <!-- Loading State -->
            <div class="loading-spinner"></div>
        </div>
    </div>
</section>

<script>
    import { getAllProfiles } from "../../lib/services/profileService";

    async function loadProgrammers() {
        const grid = document.getElementById("programmers-grid");
        if (!grid) return;

        try {
            const profiles = await getAllProfiles();

            if (profiles.length === 0) {
                grid.innerHTML =
                    '<div class="no-data">No hay operadores disponibles.</div>';
                return;
            }

            const html = profiles
                .map((profile) => {
                    const id = profile.userId;
                    const name = profile.userName;
                    const role = profile.jobTitle || "Developer";
                    const image =
                        profile.imageUrl ||
                        `https://ui-avatars.com/api/?name=${encodeURIComponent(profile.userName)}&size=400&background=random`;
                    const skills = profile.skills?.slice(0, 3) || [];

                    return `
                    <a href="/programmer/details?id=${id}" class="programmer-card-link">
                        <div class="programmer-card">
                            <div class="card-image">
                                <img src="${image}" alt="${name}" loading="lazy" />
                                <div class="overlay"></div>
                            </div>
                            <div class="card-content">
                                <h3>${name}</h3>
                                <p class="role">${role}</p>
                                <div class="tags">
                                    ${skills.map((skill) => `<span class="tag">${skill}</span>`).join("")}
                                </div>
                                <div class="card-footer">
                                    <span class="view-profile">VER PERFIL &rarr;</span>
                                </div>
                            </div>
                        </div>
                    </a>
                `;
                })
                .join("");

            grid.innerHTML = html;
        } catch (error) {
            console.error("Failed to load profiles:", error);
            grid.innerHTML =
                '<div class="error-msg">Error al cargar operadores.</div>';
        }
    }

    // Load on mount
    loadProgrammers();
</script>

<style>
    .section-title {
        text-align: center;
        font-size: 3rem;
        margin-bottom: 4rem;
        color: var(--text-main);
    }

    .section-description {
        text-align: center;
        max-width: 800px;
        margin: -3rem auto 4rem;
        color: var(--text-dim);
        font-size: 1.1rem;
        line-height: 1.6;
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 2rem;
        min-height: 200px;
    }

    .loading-spinner {
        width: 40px;
        height: 40px;
        border: 3px solid rgba(188, 19, 254, 0.3);
        border-radius: 50%;
        border-top-color: var(--cyber-purple);
        animation: spin 1s ease-in-out infinite;
        margin: 2rem auto;
    }

    @keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }

    .no-data,
    .error-msg {
        text-align: center;
        color: var(--text-dim);
        grid-column: 1 / -1;
        padding: 2rem;
    }

    @media (max-width: 768px) {
        .section-title {
            font-size: 2rem;
            margin-bottom: 2rem;
        }
    }
</style>

<!-- Global Styles for Dynamically Injected Cards -->
<style is:global>
    .programmer-card-link {
        text-decoration: none;
        display: block;
    }

    .programmer-card {
        background: var(--glass-bg);
        border: 1px solid var(--glass-border);
        border-radius: 16px;
        overflow: hidden;
        transition:
            transform 0.3s,
            box-shadow 0.3s;
        position: relative;
        height: 100%;
    }

    .programmer-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0 15px rgba(188, 19, 254, 0.3);
        border-color: var(--cyber-purple);
    }

    .card-image {
        height: 250px;
        position: relative;
        overflow: hidden;
    }

    .card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s;
    }

    .programmer-card:hover .card-image img {
        transform: scale(1.1);
    }

    .overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(to top, var(--deep-jungle), transparent);
        opacity: 0.8;
    }

    .card-content {
        padding: 1.5rem;
        position: relative;
    }

    .programmer-card h3 {
        color: var(--text-main);
        font-size: 1.5rem;
        margin-bottom: 0.2rem;
    }

    .role {
        color: var(--cyber-purple);
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 1rem;
    }

    .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 1.5rem;
    }

    .tag {
        font-size: 0.75rem;
        background: rgba(188, 19, 254, 0.1);
        color: var(--cyber-purple);
        padding: 0.25rem 0.75rem;
        border-radius: 100px;
        border: 1px solid rgba(188, 19, 254, 0.3);
    }

    .card-footer {
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        padding-top: 1rem;
        text-align: right;
    }

    .view-profile {
        color: var(--neon-green);
        font-size: 0.8rem;
        font-weight: bold;
        letter-spacing: 1px;
        transition: all 0.3s;
    }

    .programmer-card:hover .view-profile {
        padding-right: 5px;
        text-shadow: 0 0 5px var(--neon-green);
    }
</style>
