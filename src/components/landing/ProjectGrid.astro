---
const projects = [
    {
        title: "Eco-Tracker AI",
        category: "Full Stack",
        image: "https://images.unsplash.com/photo-1555949963-ff9fe0c870eb?q=80&w=1000&auto=format&fit=crop",
        description:
            "Sistema de monitoreo ambiental con inteligencia artificial.",
    },
    {
        title: "Neuromarket",
        category: "E-commerce",
        image: "https://images.unsplash.com/photo-1557821552-17105176677c?q=80&w=1000&auto=format&fit=crop",
        description: "Plataforma de comercio descentralizada.",
    },
    {
        title: "Cyber-Bank Interface",
        category: "Frontend",
        image: "https://images.unsplash.com/photo-1563986768609-322da13575f3?q=80&w=1000&auto=format&fit=crop",
        description: "Interfaz bancaria de próxima generación.",
    },
    {
        title: "Data Core Viz",
        category: "Data Science",
        image: "https://images.unsplash.com/photo-1551288049-bebda4e38f71?q=80&w=1000&auto=format&fit=crop",
        description: "Visualización de datos masivos en tiempo real.",
    },
];
---

<section id="projects" class="projects-section section-padding">
    <div class="container">
        <h2 class="section-title">
            PROYECTOS <span class="neon-text-green">DESTACADOS</span>
        </h2>
        <p class="section-description">
            Evidencia tangible de nuestra capacidad para alterar la realidad
            digital. Desde plataformas de comercio descentralizado hasta
            inteligencias artificiales de monitoreo, nuestros resultados hablan
            en binario.
        </p>
        <div class="project-grid">
            {
                projects.map((project) => (
                    <div class="project-card">
                        <div class="project-image">
                            <img src={project.image} alt={project.title} />
                            <div class="project-overlay">
                                <h3>{project.title}</h3>
                                <p>{project.description}</p>
                                <span class="category">{project.category}</span>
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    .section-title {
        text-align: center;
        font-size: 3rem;
        margin-bottom: 4rem;
        color: var(--text-main);
    }

    .section-description {
        text-align: center;
        max-width: 800px;
        margin: -3rem auto 4rem;
        color: var(--text-dim);
        font-size: 1.1rem;
        line-height: 1.6;
    }

    .project-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
    }

    .project-card {
        border-radius: 16px;
        overflow: hidden;
        position: relative;
        cursor: pointer;
    }

    .project-image {
        height: 300px;
        position: relative;
    }

    .project-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .project-card:hover .project-image img {
        transform: scale(1.1);
    }

    .project-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(5, 10, 8, 0.9);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        opacity: 0;
        transition: opacity 0.3s ease;
        padding: 2rem;
        text-align: center;
    }

    .project-card:hover .project-overlay {
        opacity: 1;
    }

    h3 {
        color: var(--neon-green);
        margin-bottom: 1rem;
        font-size: 1.5rem;
    }

    p {
        color: var(--text-main);
        margin-bottom: 1.5rem;
    }

    .category {
        background: var(--cyber-purple);
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 50px;
        font-size: 0.8rem;
        text-transform: uppercase;
    }

    @media (max-width: 768px) {
        .section-title {
            font-size: 2rem;
            margin-bottom: 2rem;
        }
    }
</style>
