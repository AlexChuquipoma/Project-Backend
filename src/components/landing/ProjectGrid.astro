---
// Client-side fetching
---

<section id="projects" class="projects-section section-padding">
    <div class="container">
        <h2 class="section-title">
            PROYECTOS <span class="neon-text-green">DESTACADOS</span>
        </h2>
        <p class="section-description">
            Evidencia tangible de nuestra capacidad para alterar la realidad
            digital. Desde plataformas de comercio descentralizado hasta
            inteligencias artificiales de monitoreo, nuestros resultados hablan
            en binario.
        </p>

        <div id="projects-grid" class="project-grid">
            <!-- Loading -->
            <div class="loading-spinner"></div>
        </div>
    </div>
</section>

<script>
    import { getAllProjects } from "../../lib/services/projectService";

    async function loadProjects() {
        const grid = document.getElementById("projects-grid");
        if (!grid) return;

        try {
            const projects = await getAllProjects();

            if (projects.length === 0) {
                grid.innerHTML =
                    '<div class="no-data">No hay proyectos destacados.</div>';
                return;
            }

            const html = projects
                .map((project) => {
                    const image =
                        project.imageUrl ||
                        "https://images.unsplash.com/photo-1555949963-ff9fe0c870eb?q=80&w=1000&auto=format&fit=crop";

                    return `
                    <div class="project-card">
                        <div class="project-image">
                            <img src="${image}" alt="${project.name}" loading="lazy" />
                            <div class="project-overlay">
                                <h3>${project.name}</h3>
                                <p>${project.description || "Sin descripci√≥n"}</p>
                                <span class="category">${project.type}</span>
                            </div>
                        </div>
                    </div>
                `;
                })
                .join("");

            grid.innerHTML = html;
        } catch (error) {
            console.error("Failed to load projects:", error);
            grid.innerHTML =
                '<div class="error-msg">Error al cargar proyectos.</div>';
        }
    }

    loadProjects();
</script>

<style>
    .section-title {
        text-align: center;
        font-size: 3rem;
        margin-bottom: 4rem;
        color: var(--text-main);
    }

    .section-description {
        text-align: center;
        max-width: 800px;
        margin: -3rem auto 4rem;
        color: var(--text-dim);
        font-size: 1.1rem;
        line-height: 1.6;
    }

    .project-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        min-height: 200px;
    }

    .loading-spinner {
        width: 40px;
        height: 40px;
        border: 3px solid rgba(57, 255, 20, 0.3);
        border-radius: 50%;
        border-top-color: var(--neon-green);
        animation: spin 1s ease-in-out infinite;
        margin: 2rem auto;
    }

    @keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }

    .no-data,
    .error-msg {
        text-align: center;
        color: var(--text-dim);
        grid-column: 1 / -1;
        padding: 2rem;
    }

    @media (max-width: 768px) {
        .section-title {
            font-size: 2rem;
            margin-bottom: 2rem;
        }
    }
</style>

<style is:global>
    .project-card {
        border-radius: 16px;
        overflow: hidden;
        position: relative;
        cursor: pointer;
    }

    .project-image {
        height: 300px;
        position: relative;
    }

    .project-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .project-card:hover .project-image img {
        transform: scale(1.1);
    }

    .project-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(5, 10, 8, 0.9);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        opacity: 0;
        transition: opacity 0.3s ease;
        padding: 2rem;
        text-align: center;
    }

    .project-card:hover .project-overlay {
        opacity: 1;
    }

    .project-overlay h3 {
        color: var(--neon-green);
        margin-bottom: 1rem;
        font-size: 1.5rem;
    }

    .project-overlay p {
        color: var(--text-main);
        margin-bottom: 1.5rem;
    }

    .category {
        background: var(--cyber-purple);
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 50px;
        font-size: 0.8rem;
        text-transform: uppercase;
    }
</style>
