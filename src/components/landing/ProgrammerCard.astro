---
interface Props {
    id: string;
    name: string;
    role: string;
    image: string;
    skills: string[];
    socials: { twitter?: string; github?: string; linkedin?: string };
}

const { id, name, role, image, skills, socials } = Astro.props;
---

<a href={`/programmer/${id}`} class="programmer-card-link">
    <div class="programmer-card">
        <div class="card-image">
            <img src={image} alt={name} />
            <div class="overlay"></div>
        </div>
        <div class="card-content">
            <h3>{name}</h3>
            <p class="role">{role}</p>
            <div class="tags">
                {skills.map((skill) => <span class="tag">{skill}</span>)}
            </div>
            <!-- Socials managed inside profile or here? Links inside link is bad practice. -->
            <!-- Removing direct social links from card preview to avoid nested interactions, moving to profile page -->
            <div class="card-footer">
                <span class="view-profile">VER PERFIL &rarr;</span>
            </div>
        </div>
    </div>
</a>

<style>
    .programmer-card-link {
        text-decoration: none;
        display: block;
    }

    .programmer-card {
        background: var(--glass-bg);
        border: 1px solid var(--glass-border);
        border-radius: 16px;
        overflow: hidden;
        transition:
            transform 0.3s,
            box-shadow 0.3s;
        position: relative;
        height: 100%;
    }

    .programmer-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0 15px rgba(188, 19, 254, 0.3);
        border-color: var(--cyber-purple);
    }

    .card-image {
        height: 250px;
        position: relative;
        overflow: hidden;
    }

    .card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s;
    }

    .programmer-card:hover .card-image img {
        transform: scale(1.1);
    }

    .overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(to top, var(--deep-jungle), transparent);
        opacity: 0.8;
    }

    .card-content {
        padding: 1.5rem;
        position: relative;
    }

    h3 {
        color: var(--text-main);
        font-size: 1.5rem;
        margin-bottom: 0.2rem;
    }

    .role {
        color: var(--cyber-purple);
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 1rem;
    }

    .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 1.5rem;
    }

    .tag {
        font-size: 0.75rem;
        background: rgba(188, 19, 254, 0.1);
        color: var(--cyber-purple);
        padding: 0.25rem 0.75rem;
        border-radius: 100px;
        border: 1px solid rgba(188, 19, 254, 0.3);
    }

    .card-footer {
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        padding-top: 1rem;
        text-align: right;
    }

    .view-profile {
        color: var(--neon-green);
        font-size: 0.8rem;
        font-weight: bold;
        letter-spacing: 1px;
        transition: all 0.3s;
    }

    .programmer-card:hover .view-profile {
        padding-right: 5px;
        text-shadow: 0 0 5px var(--neon-green);
    }
</style>
