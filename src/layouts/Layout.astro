---
import "../styles/global.css";

interface Props {
    title: string;
}

const { title } = Astro.props;
import Navbar from "../components/Navbar.astro";
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="Portafolio de Programadores - EdiciÃ³n Ciber-Selva"
        />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <Navbar />
        <div class="background-overlay"></div>
        <slot />
    </body>
</html>

<style>
    .background-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        background:
            radial-gradient(
                circle at 15% 50%,
                rgba(57, 255, 20, 0.08) 0%,
                transparent 25%
            ),
            radial-gradient(
                circle at 85% 30%,
                rgba(188, 19, 254, 0.08) 0%,
                transparent 25%
            );
        pointer-events: none;
    }
</style>
