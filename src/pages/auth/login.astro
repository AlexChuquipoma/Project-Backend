---
import Layout from "../../layouts/Layout.astro";
---

<Layout
    title="Iniciar Sesión | CiberPortfolio"
    description="Accede a tu cuenta en CiberPortfolio. Gestiona tu portafolio, proyectos y asesorías tecnológicas."
    canonicalUrl="/auth/login"
    noindex={true}
>
    <div class="auth-container">
        <div class="auth-card">
            <h1 class="glitch" data-text="ACCESO">ACCESO</h1>
            <p class="subtitle">IDENTIFICACIÓN DE USUARIO</p>

            <form id="login-form" class="auth-form" action="#" method="POST">
                <div class="input-group">
                    <label for="email">CORREO ELECTRÓNICO</label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        required
                        placeholder="usuario@red.global"
                    />
                    <div class="input-line"></div>
                </div>

                <div class="input-group">
                    <label for="password">CLAVE DE ACCESO</label>
                    <input
                        type="password"
                        id="password"
                        name="password"
                        required
                        placeholder="••••••••"
                    />
                    <div class="input-line"></div>
                </div>

                <div id="login-error" class="error-message hidden">
                    Credenciales inválidas. Acceso denegado.
                </div>

                <button type="submit" class="cyber-button">
                    INICIAR SESIÓN
                    <span class="btn-glitch"></span>
                </button>
            </form>

            <script>
                import { login } from "../../lib/services/auth.service";
                import { validateEmail } from "../../lib/utils/validators";
                import type { LoginCredentials } from "../../types/user.types";

                const loginForm = document.getElementById("login-form");
                const emailInput = document.getElementById(
                    "email",
                ) as HTMLInputElement;
                const passwordInput = document.getElementById(
                    "password",
                ) as HTMLInputElement;
                const errorMessage = document.getElementById("login-error");

                if (loginForm) {
                    loginForm.addEventListener("submit", async (e) => {
                        e.preventDefault();

                        const email = emailInput?.value || "";
                        const password = passwordInput?.value || "";

                        // Validate inputs
                        if (!validateEmail(email)) {
                            showError("Por favor ingresa un correo válido");
                            return;
                        }

                        if (password.length < 6) {
                            showError(
                                "La contraseña debe tener al menos 6 caracteres",
                            );
                            return;
                        }

                        const credentials: LoginCredentials = {
                            email,
                            password,
                        };

                        try {
                            const user = await login(credentials);

                            // Redirect based on role
                            if (user.role === "admin") {
                                window.location.href = "/admin/dashboard";
                            } else if (user.role === "programmer") {
                                window.location.href = "/programmer/dashboard";
                            } else {
                                window.location.href = "/";
                            }
                        } catch (error) {
                            showError(
                                error instanceof Error
                                    ? error.message
                                    : "Error al iniciar sesión",
                            );
                        }
                    });
                }

                function showError(message: string) {
                    if (errorMessage) {
                        errorMessage.textContent = message;
                        errorMessage.classList.remove("hidden");
                        errorMessage.style.display = "block";

                        // Shake animation
                        const card = document.querySelector(
                            ".auth-card",
                        ) as HTMLElement;
                        if (card) {
                            card.style.animation = "none";
                            card.offsetHeight; /* trigger reflow */
                            card.style.animation = "shake 0.5s";
                        }
                    }
                }
            </script>

            <div class="auth-links">
                <p>
                    ¿No tienes credenciales? <a
                        href="/auth/register"
                        class="neon-link">Registrar Protocolo</a
                    >
                </p>
                <a href="/" class="back-link">Volver al Nexus</a>
            </div>
        </div>
    </div>
</Layout>

<style>
    .auth-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1rem;
    }

    .auth-card {
        background: rgba(5, 10, 8, 0.7);
        backdrop-filter: blur(20px);
        border: 1px solid var(--glass-border);
        padding: 3rem;
        border-radius: 20px;
        width: 100%;
        max-width: 450px;
        box-shadow: 0 0 40px rgba(57, 255, 20, 0.1);
        position: relative;
        overflow: hidden;
    }

    .auth-card::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 2px;
        background: linear-gradient(
            90deg,
            transparent,
            var(--neon-green),
            transparent
        );
        animation: scan-top 2s linear infinite;
    }

    h1 {
        font-size: 2.5rem;
        color: var(--text-main);
        text-align: center;
        margin-bottom: 0.5rem;
        letter-spacing: 4px;
    }

    .subtitle {
        text-align: center;
        color: var(--cyber-purple);
        font-size: 0.9rem;
        letter-spacing: 2px;
        margin-bottom: 3rem;
    }

    .input-group {
        margin-bottom: 2rem;
        position: relative;
    }

    label {
        display: block;
        color: var(--text-dim);
        font-size: 0.8rem;
        letter-spacing: 1px;
        margin-bottom: 0.5rem;
    }

    input {
        width: 100%;
        background: transparent;
        border: none;
        color: var(--text-main);
        font-family: var(--font-body);
        font-size: 1.1rem;
        padding: 0.5rem 0;
        outline: none;
    }

    .input-line {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 1px;
        background: var(--text-dim);
        transition: all 0.3s;
    }

    input:focus ~ .input-line {
        background: var(--neon-green);
        box-shadow: 0 0 10px var(--neon-green);
    }

    .cyber-button {
        width: 100%;
        padding: 1rem;
        background: transparent;
        border: 1px solid var(--neon-green);
        color: var(--neon-green);
        font-family: var(--font-heading);
        font-size: 1.1rem;
        letter-spacing: 2px;
        cursor: pointer;
        transition: all 0.3s;
        position: relative;
        overflow: hidden;
        margin-bottom: 2rem;
    }

    .cyber-button:hover {
        background: var(--neon-green);
        color: var(--deep-jungle);
        box-shadow: 0 0 20px var(--neon-green);
    }

    .auth-links {
        text-align: center;
        font-size: 0.9rem;
        color: var(--text-dim);
    }

    .neon-link {
        color: var(--cyber-purple);
        text-decoration: none;
        font-weight: bold;
        transition: all 0.3s;
    }

    .neon-link:hover {
        text-shadow: 0 0 10px var(--cyber-purple);
    }

    .back-link {
        display: block;
        margin-top: 1rem;
        font-size: 0.8rem;
        color: var(--text-dim);
        opacity: 0.7;
    }

    .back-link:hover {
        opacity: 1;
        color: var(--text-main);
    }

    .error-message {
        color: #ff3333;
        font-size: 0.9rem;
        margin-bottom: 1rem;
        text-align: center;
        display: none;
    }

    @keyframes shake {
        0% {
            transform: translateX(0);
        }
        25% {
            transform: translateX(-5px);
        }
        50% {
            transform: translateX(5px);
        }
        75% {
            transform: translateX(-5px);
        }
        100% {
            transform: translateX(0);
        }
    }

    @keyframes scan-top {
        0% {
            transform: translateX(-100%);
        }
        100% {
            transform: translateX(100%);
        }
    }
</style>
