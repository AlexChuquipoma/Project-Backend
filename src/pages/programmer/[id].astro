---
export const prerender = false;

import Layout from "../../layouts/Layout.astro";
import { getProfileByUserId } from "../../lib/services/profileService";

const { id } = Astro.params;

if (!id) {
    return Astro.redirect("/");
}

let profile: any = null;
let projects: any[] = [];
let error = false;

try {
    // Fetch profile data
    profile = await getProfileByUserId(parseInt(id));

    // Fetch user's projects
    const API_URL =
        import.meta.env.PUBLIC_API_URL ||
        (import.meta.env.DEV
            ? "http://localhost:8080"
            : "https://backend-spring-wgjc.onrender.com");
    const projectsResponse = await fetch(`${API_URL}/api/projects/user/${id}`);
    if (projectsResponse.ok) {
        projects = await projectsResponse.json();
    }
} catch (e: any) {
    console.error("Error loading profile:", e);
    error = true;
}

// If profile doesn't exist, redirect to home
if (!profile || error) {
    return Astro.redirect("/#programmers");
}

// Generate avatar URL if no image
const avatarUrl =
    profile.imageUrl ||
    `https://ui-avatars.com/api/?name=${encodeURIComponent(profile.userName)}&size=400&background=random`;
