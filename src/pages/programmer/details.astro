---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Perfil de Programador | CiberPortfolio">
    <div id="loading" class="loading-state">
        <div class="scanner"></div>
        <p>RECOLECTANDO DATOS DEL OPERADOR...</p>
    </div>

    <div id="profile-details" class="profile-container" style="display: none;">
        <!-- Header Section -->
        <div class="profile-header">
            <div class="profile-image-container">
                <img id="p-image" src="" alt="Cargando..." />
            </div>
            <div class="profile-info">
                <h1 id="p-name" class="glitch" data-text=""></h1>
                <h3 id="p-role"></h3>
                <p id="p-bio"></p>
                <div id="p-skills" class="skills-list"></div>

                <!-- Social Links -->
                <!-- Social Links -->
                <div id="p-social" class="social-links"></div>

                <!-- Advisory Button (Dynamic) -->
                <div id="advisory-btn-container" style="margin-top: 2rem;">
                </div>
            </div>
        </div>

        <!-- Projects Grid -->
        <div class="projects-section">
            <h2 class="section-title">
                PROYECTOS <span class="neon-text">DESPLEGADOS</span>
            </h2>

            <div
                class="filter-wrapper"
                style="display:flex; justify-content:center; margin-bottom:3rem;"
            >
                <div class="filter-group">
                    <button class="filter-btn active" data-filter="all"
                        >TODOS</button
                    >
                    <button class="filter-btn" data-filter="PROFESIONAL"
                        >PROFESIONAL</button
                    >
                    <button class="filter-btn" data-filter="ACADEMICO"
                        >ACADÉMICO</button
                    >
                </div>
            </div>

            <div id="projects-grid" class="projects-grid">
                <!-- Data will be loaded here -->
            </div>
        </div>
    </div>

    <div id="error-view" class="error-container" style="display: none;">
        <h2 class="glitch" data-text="ERROR 404">ERROR 404</h2>
        <p>OPERADOR NO ENCONTRADO EN LA RED</p>
        <a href="/" class="back-link">VOLVER AL NEXUS</a>
    </div>

    <!-- Advisory Modal -->
    <div id="advisory-modal" class="modal hidden">
        <div class="modal-content">
            <div class="modal-header">
                <h2>SOLICITAR ASESORÍA</h2>
                <button class="close-modal">&times;</button>
            </div>
            <form id="advisory-form">
                <div class="input-group">
                    <label>Selecciona un Horario Disponible</label>
                    <select id="schedule-select" required class="cyber-select">
                        <option value="">Cargando horarios...</option>
                    </select>
                </div>

                <div class="input-group">
                    <label>Asunto / Mensaje</label>
                    <textarea
                        id="advisory-message"
                        rows="4"
                        required
                        placeholder="Describe brevemente el motivo de la asesoría..."
                    ></textarea>
                </div>

                <div class="form-actions">
                    <button
                        type="button"
                        class="cyber-button outline close-modal-btn"
                        >CANCELAR</button
                    >
                    <button type="submit" class="cyber-button"
                        >CONFIRMAR SOLICITUD</button
                    >
                </div>
            </form>
        </div>
    </div>
</Layout>

<script>
    import { getProfileByUserId } from "../../lib/services/profileService";
    import { getSchedulesByProgrammer } from "../../lib/services/scheduleService";
    import { createAdvisory } from "../../lib/services/advisoryService";

    let currentProgrammerId: number | null = null;

    async function init() {
        const loading = document.getElementById("loading");
        const profileDetails = document.getElementById("profile-details");
        const errorView = document.getElementById("error-view");

        const pName = document.getElementById("p-name");
        const pImage = document.getElementById("p-image") as HTMLImageElement;
        const pRole = document.getElementById("p-role");
        const pBio = document.getElementById("p-bio");
        const pSkills = document.getElementById("p-skills");
        const pSocial = document.getElementById("p-social");
        const projectsGrid = document.getElementById("projects-grid");

        // Get ID from query param
        const urlParams = new URLSearchParams(window.location.search);
        const id = urlParams.get("id");

        if (!id) {
            window.location.href = "/";
            return;
        }

        try {
            // Fetch profile data
            const profile = await getProfileByUserId(parseInt(id));
            if (!profile) throw new Error("Profile not found");

            currentProgrammerId = profile.userId;

            // Update Basic Info
            if (pName) {
                pName.textContent = profile.userName;
                pName.setAttribute("data-text", profile.userName);
            }
            if (pImage) {
                pImage.src =
                    profile.imageUrl ||
                    `https://ui-avatars.com/api/?name=${encodeURIComponent(profile.userName)}&size=400&background=random`;
                pImage.alt = profile.userName;
            }
            if (pRole) pRole.textContent = profile.jobTitle || "Developer";
            if (pBio)
                pBio.textContent = profile.bio || "Sin biografía disponible.";

            // Skills
            if (pSkills && profile.skills) {
                pSkills.innerHTML = profile.skills
                    .map((skill) => `<span class="skill-tag">${skill}</span>`)
                    .join("");
            }

            // Socials
            if (pSocial) {
                let socialHtml = "";
                if (profile.githubUrl)
                    socialHtml += renderSocialLink(
                        profile.githubUrl,
                        "GitHub",
                        "M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z",
                    );
                if (profile.linkedinUrl)
                    socialHtml += renderSocialLink(
                        profile.linkedinUrl,
                        "LinkedIn",
                        "M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z",
                    );
                if (profile.instagramUrl)
                    socialHtml += renderSocialLink(
                        profile.instagramUrl,
                        "Instagram",
                        "M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z",
                    );
                pSocial.innerHTML = socialHtml;
            }

            // Advisory Button Logic
            const advisoryBtnContainer = document.getElementById(
                "advisory-btn-container",
            );
            if (advisoryBtnContainer) {
                // Check if viewer is not the programmer himself
                const currentUser = JSON.parse(
                    localStorage.getItem("ciber_user") || "{}",
                );
                if (
                    currentUser &&
                    currentUser.id &&
                    parseInt(currentUser.id) !== profile.userId
                ) {
                    advisoryBtnContainer.innerHTML = `
                        <button id="open-advisory-modal" class="cyber-button">
                            AGENDAR ASESORÍA
                        </button>
                    `;

                    document
                        .getElementById("open-advisory-modal")
                        ?.addEventListener("click", openAdvisoryModal);
                }
            }

            // Projects
            const API_URL =
                import.meta.env.PUBLIC_API_URL ||
                "https://backend-spring-wgjc.onrender.com";
            const projectsResponse = await fetch(
                `${API_URL}/api/projects/user/${id}`,
            );
            if (projectsResponse.ok) {
                const projects = await projectsResponse.json();
                if (projectsGrid) {
                    if (projects.length > 0) {
                        projectsGrid.innerHTML = projects
                            .map((project: any) => renderProjectCard(project))
                            .join("");
                    } else {
                        projectsGrid.innerHTML =
                            '<div class="no-projects"><p>Este operador aún no ha publicado proyectos en la red.</p></div>';
                    }
                }
            }

            // Show Content
            if (loading) loading.style.display = "none";
            if (profileDetails) profileDetails.style.display = "block";

            // Initialize Filter Logic
            initFilters();

            // Initialize Modal Logic
            initAdvisoryModal();
        } catch (e) {
            console.error("Error loading profile:", e);
            if (loading) loading.style.display = "none";
            if (errorView) errorView.style.display = "block";
        }
    }

    function renderSocialLink(url: string, title: string, path: string) {
        return `
            <a href="${url}" target="_blank" class="social-link" title="${title}">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="${path}" />
                </svg>
            </a>
        `;
    }

    function renderProjectCard(project: any) {
        return `
            <div class="db-project-card" data-type="${project.type}">
                <div class="db-project-img" style="background-image: url('${project.imageUrl || "https://images.unsplash.com/photo-1550751827-4bd374c3f58b"}')"></div>
                <div class="db-project-info">
                    <div class="db-card-header">
                        <h3>${project.name}</h3>
                    </div>
                    <span class="db-badge ${project.type === "PROFESIONAL" ? "pro" : "academic"}">${project.type}</span>
                    <p>${project.description}</p>
                    <div class="db-techs">
                        ${(project.techs || []).map((t: string) => `<span>${t}</span>`).join("")}
                    </div>
                    <div class="db-actions">
                        <a href="${project.deployUrl}" target="_blank" class="action-btn primary">VER PROYECTO</a>
                        <a href="${project.repoUrl}" target="_blank" class="action-btn icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        `;
    }

    function initFilters() {
        const filterBtns = document.querySelectorAll(".filter-btn");
        const projectCards = document.querySelectorAll(".db-project-card");

        filterBtns.forEach((btn) => {
            btn.addEventListener("click", () => {
                filterBtns.forEach((b) => b.classList.remove("active"));
                btn.classList.add("active");
                const filter = btn.getAttribute("data-filter");
                projectCards.forEach((card) => {
                    if (filter === "all") {
                        (card as HTMLElement).style.display = "flex";
                    } else {
                        const cardType = card.getAttribute("data-type");
                        (card as HTMLElement).style.display =
                            cardType === filter ? "flex" : "none";
                    }
                });
            });
        });
    }

    function initAdvisoryModal() {
        const modal = document.getElementById("advisory-modal");
        const form = document.getElementById("advisory-form");
        const closeBtns = document.querySelectorAll(
            ".close-modal, .close-modal-btn",
        );
        const scheduleSelect = document.getElementById(
            "schedule-select",
        ) as HTMLSelectElement;

        closeBtns.forEach((btn) =>
            btn.addEventListener("click", () => {
                modal?.classList.add("hidden");
            }),
        );

        form?.addEventListener("submit", async (e) => {
            e.preventDefault();
            const message = (
                document.getElementById(
                    "advisory-message",
                ) as HTMLTextAreaElement
            ).value;
            const scheduleJson = scheduleSelect.value;

            if (!scheduleJson || !currentProgrammerId) return;

            try {
                const schedule = JSON.parse(scheduleJson);
                const user = JSON.parse(
                    localStorage.getItem("ciber_user") || "{}",
                );

                if (!user.id) {
                    alert("Debes iniciar sesión para agendar.");
                    window.location.href = "/login";
                    return;
                }

                const payload = {
                    programmerId: currentProgrammerId,
                    userId: parseInt(user.id),
                    message: message,
                    date: schedule.date,
                    time: schedule.time,
                    modality: schedule.modality,
                    scheduleId: schedule.id,
                };

                console.log("Sending Advisory Payload:", payload);
                await createAdvisory(payload);

                alert(
                    "✅ Solicitud enviada exitosamente. Espera la confirmación del programador.",
                );
                modal?.classList.add("hidden");
                (form as HTMLFormElement).reset();
            } catch (error: any) {
                console.error(error);
                alert("Error al enviar solicitud: " + error.message);
            }
        });
    }

    async function openAdvisoryModal() {
        const modal = document.getElementById("advisory-modal");
        const scheduleSelect = document.getElementById(
            "schedule-select",
        ) as HTMLSelectElement;

        if (modal) modal.classList.remove("hidden");

        if (scheduleSelect && currentProgrammerId) {
            scheduleSelect.innerHTML =
                '<option value="">Cargando horarios...</option>';
            try {
                const schedules =
                    await getSchedulesByProgrammer(currentProgrammerId);
                const availableSchedules = schedules; // Show all, but mark occupied ones

                if (availableSchedules.length === 0) {
                    scheduleSelect.innerHTML =
                        '<option value="">No hay horarios configurados</option>';
                    return;
                }

                scheduleSelect.innerHTML = availableSchedules
                    .map((s: any) => {
                        const isBooked = s.status !== "AVAILABLE";
                        // Combine Date, Time, Modality
                        const label = `${s.date} - ${s.time.slice(0, 5)} - ${s.modality} ${isBooked ? "(OCUPADO)" : ""}`;
                        const value = JSON.stringify(s); // Store whole object to extract date/time/modality
                        return `<option value='${value}' ${isBooked ? "disabled" : ""} style="${isBooked ? "color: #ff3939;" : ""}">${label}</option>`;
                    })
                    .join("");
            } catch (error) {
                scheduleSelect.innerHTML =
                    '<option value="">Error al cargar horarios</option>';
            }
        }
    }

    // Run on init
    init();
    document.addEventListener("astro:page-load", init);
</script>

<style>
    .loading-state {
        min-height: 80vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        color: var(--neon-green);
        text-align: center;
        font-family: "Orbitron", sans-serif;
    }

    .scanner {
        width: 300px;
        height: 2px;
        background: var(--neon-green);
        box-shadow: 0 0 15px var(--neon-green);
        margin-bottom: 2rem;
        animation: scan 2s linear infinite;
    }

    @keyframes scan {
        0% {
            transform: translateY(0);
            opacity: 0;
        }
        50% {
            opacity: 1;
        }
        100% {
            transform: translateY(50px);
            opacity: 0;
        }
    }

    .profile-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 8rem 2rem 4rem;
        min-height: 100vh;
    }

    .profile-header {
        display: flex;
        gap: 4rem;
        margin-bottom: 6rem;
        align-items: center;
    }

    .profile-image-container {
        flex-shrink: 0;
        width: 300px;
        height: 300px;
        position: relative;
    }

    .profile-image-container img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 20px;
        border: 2px solid var(--neon-green);
        box-shadow: 0 0 30px rgba(57, 255, 20, 0.2);
    }

    .profile-info h1 {
        font-size: 3.5rem;
        color: var(--text-main);
        margin-bottom: 0.5rem;
        letter-spacing: 2px;
        font-family: "Orbitron", sans-serif;
    }

    .profile-info h3 {
        color: var(--neon-green);
        font-size: 1.5rem;
        margin-bottom: 1.5rem;
        font-family: "Orbitron", sans-serif;
    }

    .profile-info p {
        color: var(--text-dim);
        font-size: 1.1rem;
        line-height: 1.8;
        max-width: 600px;
        margin-bottom: 2rem;
    }

    .skills-list {
        display: flex;
        flex-wrap: wrap;
        gap: 0.8rem;
    }

    :global(.skill-tag) {
        background: transparent;
        border: 1px solid var(--cyber-purple);
        color: var(--cyber-purple);
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-size: 0.9rem;
    }

    .social-links {
        display: flex;
        gap: 1rem;
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid rgba(57, 255, 20, 0.2);
    }

    :global(.social-link) {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 45px;
        height: 45px;
        background: rgba(57, 255, 20, 0.05);
        border: 1px solid rgba(57, 255, 20, 0.3);
        border-radius: 8px;
        color: var(--neon-green);
        transition: all 0.3s ease;
    }

    :global(.social-link:hover) {
        background: rgba(57, 255, 20, 0.15);
        border-color: var(--neon-green);
        box-shadow: 0 0 20px rgba(57, 255, 20, 0.3);
        transform: translateY(-3px);
    }

    .projects-section {
        margin-top: 4rem;
    }

    .section-title {
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: 3rem;
        color: var(--text-main);
        font-family: "Orbitron", sans-serif;
    }

    .projects-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 2rem;
    }

    .error-container {
        min-height: 80vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
    }

    .error-container h2 {
        font-size: 5rem;
        color: #ff3939;
        margin-bottom: 1rem;
    }

    .back-link {
        margin-top: 2rem;
        color: var(--neon-green);
        text-decoration: none;
        border: 1px solid var(--neon-green);
        padding: 0.5rem 1.5rem;
        transition: all 0.3s;
    }

    .back-link:hover {
        background: var(--neon-green);
        color: black;
    }

    /* Filters */
    .filter-group {
        display: flex;
        background: rgba(0, 0, 0, 0.3);
        border-radius: 4px;
        padding: 4px;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .filter-btn {
        background: transparent;
        border: none;
        color: var(--text-dim);
        padding: 0.5rem 1.5rem;
        cursor: pointer;
        font-family: "Orbitron", sans-serif;
        font-weight: bold;
        transition: all 0.3s;
    }

    .filter-btn.active {
        background: var(--neon-green);
        color: black;
    }

    /* Global Project Card Styles */
    :global(.db-project-card) {
        background: rgba(10, 15, 12, 0.6);
        backdrop-filter: blur(5px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 4px;
        overflow: hidden;
        transition: all 0.3s;
        display: flex;
        flex-direction: column;
    }

    :global(.db-project-card:hover) {
        transform: translateY(-5px);
        border-color: #39ff14;
        box-shadow: 0 0 20px rgba(57, 255, 20, 0.2);
    }

    :global(.db-project-img) {
        height: 180px;
        width: 100%;
        background-size: cover;
        background-position: center;
    }

    :global(.db-project-info) {
        padding: 1.5rem;
        flex: 1;
        display: flex;
        flex-direction: column;
        color: #e0e0e0;
    }

    :global(.db-project-info h3) {
        color: #ffffff;
        font-family: "Orbitron", sans-serif;
        font-size: 1.2rem;
        margin: 0 0 0.5rem 0;
    }

    :global(.db-badge) {
        display: inline-block;
        font-size: 0.7rem;
        padding: 0.2rem 0.6rem;
        border: 1px solid;
        margin-bottom: 1rem;
        width: fit-content;
        text-transform: uppercase;
    }

    :global(.db-badge.pro) {
        border-color: #00f3ff;
        color: #00f3ff;
    }

    :global(.db-badge.academic) {
        border-color: #bc13fe;
